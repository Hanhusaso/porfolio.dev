---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
}
const PROJECTS = [
  {
    title: "Fondo Editorial UNMSM",
    description:
      "Página web del Fondo Editorial en donde se encuentran catalogos, noticias y eventos. Creada con Next.js y Tailwind CSS.",
    link: "https://fondoeditorial.unmsm.edu.pe/",
    github: "",
    image: "/projects/fondo-editorial.webp",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "Intelego",
    description:
      "Empresa de repositorios digitales. Creada con Next.js y Tailwind CSS.",
    link: "https://intelego.pe/",
    image: "/projects/intelego.webp",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
	title: "Discursos visuales sobre lo afroperuano",
	description: "Página en reconocimiento a la cultura afroperuana. Creada con Next.js.",
	link: "https://discursosvisualesafroperuanos.com/",
	image: "/projects/discursos-visuales-afroperuano.webp",
	tags: [TAGS.NEXT],
  },
  {
	title: "Facultad de Ciencias Biológicas UNMSM",
	description: "Página web de la facultad de Ciencias Biológicas. Creada con Next.js y Tailwind CSS.",
	link: "https://biologia.unmsm.edu.pe/",
	image: "/projects/fcb.webp",
	tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
	title: "Admisióm 2025-I UNMSM",
	description: "Página web de admisión de la UNMSM. Creada con Next.js y Tailwind CSS.",
	link: "https://admision-unmsm-2025-i.vercel.app/",
	image: "/projects/admision-2025-i.webp",
	tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
	title: "Becas Doctorado - FCB UNMSM",
	description: "Página web de becas de doctorado de la FCB UNMSM. Creada con Next.js y Tailwind CSS.",
	link: "https://becasdoctorado.biologia.unmsm.edu.pe/",
	image: "/projects/becas-doctorado-fcb.webp",
	tags: [TAGS.NEXT, TAGS.TAILWIND],
  }
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



